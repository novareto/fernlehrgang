<html>
  <body>
    <div metal:use-macro="macro:editform" />
    <table tal:define="results view/getResults" tal:condition="results">
      <tr>
        <th> Name </th>
        <th> Vorname </th>
        <th> Geburtsdatum </th>
        <th> Unternehmen </th>
      </tr>
      <tr tal:repeat="result results">
        <td> <span tal:content="structure result/name" /> </td>
        <td> <span tal:content="result/vorname" /> </td>
        <td> <span tal:content="result/gebdat" /> </td>
        <td> <span tal:content="structure result/unternehmen" /> </td>
      </tr>
    </table>
  </body>
</html>
