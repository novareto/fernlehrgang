<html>
<body>
<div metal:use-macro="path: context/@@formmacros/template/macros/editform"> </div>
<!--
<div class="form-group" id="select_teilnehmer">
<select name="form.field.id" style="width: 550px" />
</div>
-->

<script language="Javascript">
  $('select#teilnehmer_id').ajaxChosen({
     dataType: 'json',
     type: 'POST',
     url: '<tal:url replace="'%s/search_teilnehmer' % view.application_url()" />'
   },
   {
      minLength: 3
   });
</script>

<div tal:define="results list(view.getResults())" tal:condition="results" class="panel panel-default">
  <div class="panel-heading" tal:define="result results[0]">
    <h3> Teilnehmer </h3>
    <p> <span tal:content="structure result['name']"> </p>
    <p tal:content="structure result['vorname']"> </p> 
    <p tal:content="structure result['gebdat']"> </p> 
    <p tal:content="structure result['unternehmen']"> </p> 
  </div> 
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th> Kursteilnehmer </th>
          <th> Vorname </th>
          <th> Geburtsdatum </th>
          <th> Unternehmen </th>
          <th> Status </th>
          <th> Ergebnis </th>
        </tr>
      </thead>
      <tbody>
      <tr tal:repeat="result results">
        <td> <span tal:content="structure result['link_flg']"> </span> </td>
        <td> <span tal:content="structure result['name']"> </span> </td>
        <td> <span tal:content="structure result['vorname']"></span> </td>
        <td> <span tal:content="structure result['gebdat']"></span> </td>
        <td> <span tal:content="structure result['unternehmen']"></span> </td>
        <td> <span tal:content="structure result['status']"></span> </td>
        <td> <span tal:content="structure result['bestanden']"></span> </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
</body>
</html>
