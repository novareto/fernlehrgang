<html>
<body>
<div metal:use-macro="path: context/@@formmacros/template/macros/editform"> </div>
<!--
<div class="form-group" id="select_teilnehmer">
<select name="form.field.id" style="width: 550px" />
</div>
-->

<script language="Javascript">
  $('select#teilnehmer_id').ajaxChosen({
     dataType: 'json',
     type: 'POST',
     url: '<tal:url replace="'%s/search_teilnehmer' % view.application_url()" />'
   },
   {
      minLength: 3
   });
</script>

<fieldset tal:define="results list(view.getResults())" tal:condition="results">
  <legend> Ergebnisse </legend>
  <div class="row">
  <div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3> Teilnehmer </h3>
    </div>
    <div class="panel-body" tal:define="result results[0]">
      <p tal:content="structure result['anrede']"> </p>
      <p tal:content="structure result['titel']"> </p>
      <p tal:content="structure result['name']"> </p>
      <p tal:content="structure result['vorname']"> </p> 
      <p tal:content="structure result['gebdat']"> </p> 
    </div> 
  </div>
  </div>
  <div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3> Unternehmen </h3>
    </div>
    <div class="panel-body" tal:define="result results[0]">
      <p tal:content="structure result['unternehmen']"> </p> 
    </div> 
  </div>
  </div>
  </div>
  <div class="row col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3> Lehrg√§nge </h3>
    </div>
    <div class="panel-body">

    <table class="table">
      <thead>
        <tr>
          <th> Kursteilnehmer </th>
          <th> Status </th>
          <th> Ergebnis </th>
        </tr>
      </thead>
      <tbody>
      <tr tal:repeat="result results">
        <td> <span tal:content="structure result['link_flg']"> </span> </td>
        <td> <span tal:content="structure result['status']"></span> </td>
        <td> <span tal:content="structure result['bestanden']"></span> </td>
      </tr>
      </tbody>
    </table>
    </div>
  </div>
</fieldset>
</body>
</html>
