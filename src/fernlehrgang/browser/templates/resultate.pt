<div tal:define="results view/getResults">
  <h1 tal:content="view/title"></h1>
   <p class="description" tal:content="view/description"/>

<fieldset tal:define="summary view/getSummary">

    <div>
       <h3> Auswertung </h3>
         <ul>
          <li>Folgende Punktzahl ist nötig um den Kurs zu bestehen: <span tal:replace="summary/points"/></li> 
          <li>Erreichte Anzahl von Punkte: <span tal:replace="summary/resultpoints"/></li> 
          <li>Bemerkung: <span tal:replace="summary/comment"/></li> 
    </div>

     
    <div>
        <h3 class="current">Übersicht Lehrhefte</h3> 
        <div class="pane" style="display:block">
          <table class="myTable">
            <tr>
             <th> Lehrheft </th>
             <th> Fragen </th>
             <th> Punkte </th>
            </tr>
            <tr tal:repeat="lh results">
              <td> <span tal:content="lh/titel" /> </td>
              <td> <span tal:content="python: len(lh.get('antworten', []))" /> </td>
              <td> <span tal:content="lh/punkte" /> </td>
            </tr>
            <tr>
              <td colspan=2> Gesamt </td>
              <td tal:content="summary/resultpoints"/> 
          </table>
        </div> 
    </div>
   
     <br> <br>
    <h3> Die einzelnen Lehrhefte </h3>
     <div id="accordion">
      <div tal:repeat="lh results">
        <h2> <span tal:content="lh/titel" /> </h2> 
        <div class="pane">
          <table>
            <tr>
             <th> Frage </th>
             <th> Richtig </th>
             <th> Antwort </th>
             <th> Bestanden </th>
            </tr>
            <tr tal:repeat="ant lh/antworten">
              <td> <span tal:content="ant/titel"/> </td>
              <td> <span tal:content="ant/frage"/> </td>
              <td> <span tal:content="ant/antwort"/> </td>
              <td> <span tal:content="ant/res"/> </td>
            </tr>
            <tr>
              <td colspan="3"> Gesamt </td>
              <td tal:content="lh/punkte"/>
            <tr>
          </table>
        </div> 
      </div>
    </div>
  </fieldset>  
</div>
