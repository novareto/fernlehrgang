<div id="uvc-global-menu" class="" tal:define="flgs viewlet/flgs" tal:condition="viewlet/flgs">
  <dl tal:repeat="flg python: flgs.keys()" tal:attributes="class python: viewlet.getCss(flg)">
    <dt>
      <a> <span tal:content="flg"/> </a>
    </dt>
    <dd style="display: none;">
      <ul class="dropdown" tal:repeat="item python: flgs[flg]">
        <li> <a href="" tal:attributes="href item/url"> <span tal:content="item/title"/> </a> </li>
      </ul>
    </dd>
  </dl>
</div>
<div class="relax"> </div>
