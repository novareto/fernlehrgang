<div class="files-overview outlined-block" tal:condition="view.files">
  <dl>
    <dd tal:repeat="file view.files">
      <a href="" tal:attributes="href file['url'];
				 title file['name'];"
         tal:content="'%s (%s)' % (file['name'], file['size'])" />
    </dd>
  </dl>
  <div class="outlined-block-title">Attached file(s)</div>
</div>
