# deploy.ini
#
# Deployment configuration for use with paster/WSGI
#

[loggers]
keys = root, wsgi

[handlers]
keys = console, accesslog

[formatters]
keys = generic, accesslog

[logger_root]
level = INFO
handlers = console

[logger_wsgi]
level = INFO
handlers = accesslog
qualname = wsgi
propagate = 0

[handler_console]
;class = FileHandler
;args = (os.path.join(r'${settings:logfiles}', 'event.log'), 'a')
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[handler_accesslog]
class = FileHandler
args = (os.path.join(r'${settings:logfiles}', 'access.log'),
        'a')
level = INFO
formatter = accesslog

[formatter_generic]
format = %(asctime)s %(levelname)s [%(name)s] %(message)s

[formatter_accesslog]
format = %(message)s

[filter:translogger]
use = egg:Paste#translogger
setup_console_handler = False
logger_name = wsgi

[filter:gzip]
use = egg:Paste#gzip

[filter:fanstatic]
use = egg:fanstatic#fanstatic
bottom = true
versioning = true
minified = true
rollup = true
recompute_hashes = true

[filter:session]
use = egg:cromlech.wsgistate#file_session
session_key = session.key
session_cache = ${settings:session_cache}

[app:fernlehrgang]
use = egg:fernlehrgang.app#main
store_root = ${settings:image_storage}
store_prefix = /images
dsn = ${SQL:DSN}

[app:quizz]
paste.app_factory = fernlehrgang.questionary.app:application
store_root = ${settings:image_storage}
store_prefix = /images
dsn = ${SQL:DSN}

[app:xmlrpc]
paste.app_factory = fernlehrgang.app.wsgi:xmlrpc_factory
dsn = ${SQL:DSN}

[app:router]
use = egg:Paste#urlmap
/ = fernlehrgang
/quizz = quizz
/xmlrpc = xmlrpc
filter-with = session


[pipeline:main]
pipeline = gzip fanstatic router


[server:main]
use = egg:Paste#http
host = ${settings:host}
port = ${:port}
