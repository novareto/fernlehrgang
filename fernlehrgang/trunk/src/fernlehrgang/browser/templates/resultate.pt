<div tal:define="results view/getResults">
  <h1 tal:content="view/title"></h1>
   <p class="description" tal:content="view/description"/>

    <fieldset tal:define="summary view/getSummary">
       <legend> Auswertung </legend>
        <h3>Folgende Punktzahl ist nötig um den Kurs zu bestehen: <span tal:replace="summary/points"/></h3> 
        <h3>Erreichte Anzahl von Punkte: <span tal:replace="summary/resultpoints"/></h3> 
        <h3>Bemerkung: <span tal:replace="summary/comment"/></h3> 
    </fieldset>

     
    <div>
        <h2 class="current">Übersicht Lehrhefte</h2> 
        <div class="pane" style="display:block">
          <table class="myTable">
            <tr>
             <th> Lehrheft </th>
             <th> Fragen </th>
             <th> Punkte </th>
            </tr>
            <tr tal:repeat="lh results">
              <td> <span tal:content="lh/titel" /> </td>
              <td> <span tal:content="python: len(lh.get('antworten', []))" /> </td>
              <td> <span tal:content="lh/punkte" /> </td>
            </tr>
          </table>
        </div> 
    </div>
   
     <br> <br>
    <h2> Die einzelnen Lehrhefte </h2>
     <div id="accordion">
      <div tal:repeat="lh results">
        <h2> <span tal:content="lh/titel" /> </h2> 
        <div class="pane">
          <table>
            <tr>
             <th> Frage </th>
             <th> Richtig </th>
             <th> Antwort </th>
             <th> Bestanden </th>
            </tr>
            <tr tal:repeat="ant lh/antworten">
              <td> <span tal:content="ant/titel"/> </td>
              <td> <span tal:content="ant/frage"/> </td>
              <td> <span tal:content="ant/antwort"/> </td>
              <td> <span tal:content="ant/res"/> </td>
            </tr>
          </table>
        </div> 
      </div>
    </div>
</div>
