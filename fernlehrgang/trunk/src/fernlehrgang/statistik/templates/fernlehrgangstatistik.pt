<html>
   <h1 tal:content="view/title"/>
   <p class="description"> <span tal:content="view/description"/> </p>
 <div>
   <h3> Kursteilnehmer am Fernlehrgang </h3>
    <ul>
      <li> Anzahl aller Teilnehmer <span tal:replace="view/alle_kursteilnehmer"/> </li>
      <li tal:repeat="ktn view/kursteilnehmer_detail">
        <span tal:content="python: ktn[0]"/>
        <span tal:content="python: ktn[1]"/>
      </li>
    </ul>
 </div>
 <div tal:define="ant view/getAntworten">
   <h3> Eingegangene Antworten </h3>
   <table>
     <tr>
       <th> Lehrheft Nummer </th>
       <th> Anzahl Antworten </th>
     </tr>
     <tr tal:repeat="a ant">
       <td> <span tal:content="python: a[0]"/> </td>
       <td> <span tal:content="python: a[1]"/> </td>
     </tr>
   </table>
 </div>
</html>
