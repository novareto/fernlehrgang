<html>
  <body>
    <div metal:use-macro="macro['editform']" />
    <table tal:define="results view.getResults()" tal:condition="results" class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th> Fernlehrgang </th>
        <th> Kursteilnehmer </th>
        <th> Vorname </th>
        <th> Geburtsdatum </th>
        <th> Unternehmen </th>
        <th> Status </th>
        <th> Ergebnis </th>
      </tr>
      </thead>
      <tbody>
      <tr tal:repeat="result results">
        <td> <span tal:content="structure result['link_flg']" /> </td>
        <td> <span tal:content="structure result['name']" /> </td>
        <td> <span tal:content="structure result['vorname']" /> </td>
        <td> <span tal:content="structure result['gebdat']" /> </td>
        <td> <span tal:content="structure result['unternehmen']" /> </td>
        <td> <span tal:content="structure result['status']" /> </td>
        <td> <span tal:content="structure result['bestanden']" /> </td>
      </tr>
      </tbody>
    </table>
  </body>
</html>
